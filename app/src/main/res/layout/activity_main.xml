<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gomb1"
        android:text="SCAN"
        android:textSize="25dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gomb2"
        android:text="KIÍR"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:text="A TextView tartalmát a kiír gombra kattintva írd ki a telefon belső tárhelyén 1 scannedCodes.csv nevű fájlba. A fájl tartalmazza a beolvasott szöveget és a kiírás időpontját yyyy-MM-dd HH:mm:ss formában, vesszővel elválasztva."
        android:textAlignment="center"/>

</LinearLayout>